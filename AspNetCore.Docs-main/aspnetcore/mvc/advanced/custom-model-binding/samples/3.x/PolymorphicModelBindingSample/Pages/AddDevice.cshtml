@page
@model AddDeviceModel
@{
    ViewData["Title"] = "Add a device";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form method="POST">
            <div asp-validation-summary="All"></div>

            <div class="form-group">
                <label for="Device_Kind">Kind</label>
                <select id="Device_Kind" name="Device.Kind" asp-items="Model.DeviceKinds" class="form-control"></select>
            </div>

            <div class="form-group">
                <label for="Device_CPUIndex">CPUIndex</label>
                <input id="Device_CPUIndex" name="Device.CPUIndex" class="form-control"></select>
            </div>

            <div class="form-group">
                <label for="Device_ScreenSize">ScreenSize</label>
                <input id="Device_ScreenSize" name="Device.ScreenSize" class="form-control"></select>
            </div>

            <button type="submit" class="btn btn-primary">Add</button>
        </form>
    </div>
</div>
